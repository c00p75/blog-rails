<%= stylesheet_link_tag "style.css", "data-turbo-track": "reload" %>

<h2>Log in</h2>
<div class="form-wrapper">

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form_registeration'}) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field remember-me flex flex-center">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<%= link_to "Log in as test user", login_as_test_user_path, style: "background: green;" %>

</div>