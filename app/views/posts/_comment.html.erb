<li style="margin-top: 1.5em">
  <div class="flex" style="position: relative; flex-direction: column;">
    <h4><%= user_link(User.find(comment.user_id)) %></h4>
    <div style="margin: 0.4em 0;"><%= comment.text %></div>
    <% if action_name == 'show' && can?(:destroy, comment) %>
      <%= button_to 'Delete Comment', user_post_comment_path(@user, @post, comment), method: :delete %>
    <% end %>
  </div>
</li>